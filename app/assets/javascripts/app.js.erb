var app = angular.module('AngularBlog', ['ngAnimate', 'ui.bootstrap', 'ui.router']);

app.config(['$stateProvider', '$urlRouterProvider',function($stateProvider, $urlRouterProvider) {
  $urlRouterProvider.otherwise('/');  // if no matching path, always route to the root

  $stateProvider
    .state('home', {
      url: "/",
      templateUrl: '<%= asset_path "home.html" %>'
    });

  $stateProvider
    .state('posts', {
      url: "/posts?query&category&time",
      templateUrl: '<%= asset_path "posts.html" %>',
      controller: 'BlogCtrl'
    });
}]);
